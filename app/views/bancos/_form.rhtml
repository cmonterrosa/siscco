<%= error_messages_for 'banco' %>

<!--[form:banco]-->
<table>
  <tr>
    <th>Nombre:</th>
    <th>Num Cuenta:</th>
    <th>Titular:</th>
    <th>Direcci√≥n:</th>
  </tr>
  <tr>
    <td><%= text_field 'banco', 'nombre', :onkeypress => "return CharNum(event, 'letra');", :style => "font-size:10px;"  %></td>
    <td><%= text_field 'banco', 'num_cuenta', {:style => "font-size:10px;"}  %></td>
    <td><%= text_field 'banco', 'titular', :onkeypress => "return CharNum(event, 'letra');", :style => "font-size:10px;"  %></td>
    <td><%= text_field 'banco', 'direccion', :style => "font-size:10px;"  %></td>
  </tr>
  <tr>
    <th>Telefono:</th>
    <th>Estado:</th>
    <th>Municipio:</th>
    <th>Ejido:</th>
  </tr>
  <tr>
    <td><%=  text_field 'banco', 'telefono', :onkeypress => "return CharNum(event, 'numero');", :style => "font-size:10px;"   %></td>
    <td><%=  collection_select("", "estado_id", $estados, :id, :estado, :prompt => '>>Estado', :style => "font-size:10px;")    %></td>
    <td><%=  select("","municipio_id", ['>>Municipios'], :prompt => '>>Municipio', :style => "font-size:10px;")    %></td>
    <td><%=  select("","ejido_id", ['>>Ejidos'], :prompt => '>>Ejidos', :style => "font-size:10px;")    %></td>
  </tr>
  <tr>
    <th>Colonia:</th>
  </tr>
  <tr>
    <td><%=  collection_select("banco", "colonia_id", $colonias, :id, :colonia, :prompt => '>>Colonia', :style => "font-size:10px;")    %></td>
  </tr>
</table>


<!--[eoform:banco]-->
<!--------- funciones cargar combos ------------->
      <%= observe_field '_estado_id',
        :url => {:controller => 'combos',
        :action => 'get_municipios'},
        :update => '_municipio_id',
        :with => '_estado_id' %>


      <%= observe_field '_municipio_id',
        :url => {:controller => 'combos',
        :action => 'get_ejidos'},
        :update => '_ejido_id',
        :with => '_municipio_id' %>


      <%= observe_field '_ejido_id',
        :url => {:controller => 'combos',
        :action => 'get_colonias'},
        :update => 'banco_colonia_id',
        :with => '_ejido_id' %>
