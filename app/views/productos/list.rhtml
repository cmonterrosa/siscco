<h1>Productos</h1>
<!--inicia ajax -->
<label for="searchtext">BÃºsqueda por nombre:</label>
  <%= text_field_tag :searchtext %>
  <%= observe_field(:searchtext,
                 :frequency => 0.25,
                 :update => :search_hits,
                 :with  => "searchtext",
                 :url => { :action => :live_search }) %>
<br /><br/><p>Resultados de la Busqueda:</p>
<div id="scroll">
  <div id="search_hits">
    <table>
      <tr>
      <% for column in Producto.content_columns %>
        <th><%= column.human_name %></th>
      <% end %>
        <th colspan="3">Acciones</th>
      </tr>
  
      <% for producto in @productos %>
      <tr>
        <% for column in Producto.content_columns %>
        <td><%=h producto.send(column.name) %></td>
        <% end %>
        <td><%= button_to 'Detalles', :action => 'show', :id => producto %></td>
        <td><%= button_to 'Editar', :action => 'edit', :id => producto %></td>
        <td><%= button_to 'Eliminar', { :action => 'destroy', :id => producto }, :confirm => 'Estas seguro?', :method => :post %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<table  class="botones">
  <tr class="botones">
    <th class="botones"><h4><%= button_to 'Agregar Productos', :action => 'new' %></h4></th>
  </tr>
</table>
